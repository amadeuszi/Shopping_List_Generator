<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="500.0" prefWidth="635.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="application.MainController">
   <children>
      <ComboBox fx:id="combobox" layoutX="5.0" layoutY="14.0" prefHeight="43.0" prefWidth="259.0" promptText="Select Recipie" />
      <ListView fx:id="list" layoutX="6.0" layoutY="250.0" prefHeight="225.0" prefWidth="620.0" />
      <Button fx:id="btnDescription" layoutX="9.0" layoutY="64.0" mnemonicParsing="false" onAction="#descriptionAction" text="Description">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnAdd" layoutX="9.0" layoutY="104.0" mnemonicParsing="false" onAction="#addAction" text="Add Recipie To List">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnGenerate" layoutX="9.0" layoutY="143.0" mnemonicParsing="false" onAction="#generateAction" text="Generate Shopping List">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TextArea fx:id="txt" layoutX="270.0" layoutY="14.0" prefHeight="225.0" prefWidth="356.0" />
      <Button fx:id="btnReset" layoutX="9.0" layoutY="182.0" mnemonicParsing="false" onAction="#resetAction" text="Reset Recipie List">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
